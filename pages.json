{
	// 怎么看文档？
	// 1 有哪些配置
	// 2 赋值是什么类型
	// 3 这个配置有什么效果？
	// 如果配置赋值是对象，还有其他表格陈述对象下有哪些属性，每个属性作用是什么
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		// 相当于路由配置
		// 有一个也页面，就需要配置pages
		{
			"path": "pages/home/home", // 页面代码
			"style": { // 页面样式，导航条 背景色
				"navigationBarBackgroundColor": "#323232",
				"navigationBarTextStyle": "white",
				"titleImage": "static/img/homeTop.png",
				"enablePullDownRefresh": false,
				// "navigationStyle":"custom",
				"app-plus": {
					"titleNView": {
						"buttons": [{
							"text": "搜索",
							"fontSize": "14px",
							"float": "right",
							"onclick": "search"
						}]
					}
				}
			}
		}, {
			"path": "pages/sort/sort",
			"style": {
				//"navigationBarTitleText": "分类",
				"navigationStyle": "custom",
				"enablePullDownRefresh": false // 个人中心页，是否启动下拉刷新，默认不启动
			}
		},
		{
			"path": "pages/shopcar/shopcar",
			"style": {
				"navigationBarTitleText": "购物车",
				"navigationBarBackgroundColor": "#353535",
				"navigationBarTextStyle": "white",
				"enablePullDownRefresh": false,
				"app-plus": {
					"titleNView": {
						"bounce": "none",
						"autoBackButton": true,
						"homeButton": true,
						"buttons": [{
							"type": "back",
							"float": "left"
						}]
					}
				}
			}
		},
		{
			"path": "pages/mine/mine",
			"style": {
				"navigationBarTitleText": "个人中心",
				"enablePullDownRefresh": false, // 个人中心页，是否启动下拉刷新，默认不启动
				"navigationBarBackgroundColor": "#353535",
				"navigationBarTextStyle": "white",
				"app-plus": {
					"titleNView": {
						"bounce": "none",
						"autoBackButton": true,
						"homeButton": true,
						"buttons": [{
								"type": "back",
								"float": "left",
								"onclick": "myback",
								"fontSize": "20px",
								"fontWeight": "bold"
							},
							{
								"text": "\u2630",
								"float": "right",
								"fontSize": "20px",
								"onclick": "mybar"
							}
						]
					}
				}
				
			}
		},
		{
			"path": "pages/detal/detal",
			"style": {
				"navigationBarTitleText": "商品详情",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/search/search",
			"style": {
				"navigationBarTitleText": "搜索",
				"enablePullDownRefresh": false
				// "titleNView": {
				// 	"searchInput": {
				//  	"borderRadius": "15px",
				// 		"placeholder": "输入要搜索内容"
				// 	},
				// 	"buttons": [{
				// 		"text": "搜索",
				// 		"fontSize": "16px",
				// 		"width": "48px"
				// 	}]
				// }
			}
		}, {
			"path": "pages/shopcar/noLoginShow",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}
		}, {
			"path": "pages/walk-around/walk-around",
			"style": {
				"navigationBarTitleText": "新品到着",
				"navigationBarBackgroundColor": "#353535",
				"navigationBarTextStyle": "white",
				"enablePullDownRefresh": false,
				"app-plus": {
					"titleNView": {
						"bounce": "none",
						"autoBackButton": true,
						"homeButton": true,
						"buttons": [{
							"type": "home",
							"float": "right"
						}]
					}
				}
			}

		}
	    ,{
            "path" : "pages/order/order",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	"globalStyle": { // 配置全局程序样式
		"navigationBarTextStyle": "black", // 导航文本颜色，只有白色 黑色
		"navigationBarTitleText": "主页", // 导航默认文本信息
		"navigationBarBackgroundColor": "#F8F8F8", // 导航背景设
		"backgroundColor": "#F8F8F8" // 程序背景色
	},
	// 一级页面tabBar配置
	"tabBar": {
		// 最多有5个一级tab 
		//#ifndef MP-WEIXIN
		"list": [{
			"pagePath": "pages/home/home", // tabbar 加载也买你
			"iconPath": "static/img/tabbar/home.svg", // 没选中图表
			"text": "主页", // tabBar 文本信息
			"selectedIconPath": "static/img/tabbar/home_active.svg" // 选中时候时候，图片			
		}, {
			"pagePath": "pages/sort/sort",
			"iconPath": "static/img/tabbar/type.svg",
			"selectedIconPath": "static/img/tabbar/type_active.svg",
			"text": "分类"
		}, {
			"pagePath": "pages/shopcar/shopcar",
			"iconPath": "static/img/tabbar/shopcar.svg",
			"selectedIconPath": "static/img/tabbar/shopcar_active.svg",
			"text": "购物车"
		}, {
			"pagePath": "pages/mine/mine",
			"iconPath": "static/img/tabbar/profile.svg",
			"text": "我的",
			"selectedIconPath": "static/img/tabbar/profile_active.svg"
		}],
		//#endif
		"color": "#7A7E83", // tabBar 默认文本字体演示
		"selectedColor": "#2b2b2b", // 选中字体颜色
		"fontSize": "12px"
	}
}
