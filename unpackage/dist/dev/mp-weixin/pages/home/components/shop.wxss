.shop {
  background-color: #f5f4f9;
}
.shop .nav {
  z-index: 100;
  display: inline-block;
  white-space: nowrap;
  width: 100%;
  height: 38px;
  line-height: 35px;
  background-color: white;
  position: -webkit-sticky;
  position: sticky;
  /* top:100px; */
}
.shop .nav text {
  color: #646566;
  font-size: 20rpx;
  width: 14%;
  margin: 0 5%;
}
.shop .content {
  padding-top: 15px;
}
.item {
  display: inline-block;
  width: 187rpx;
  font-size: 16px;
  text-align: center;
}
.active {
  font-size: 22rpx;
  font-weight: 600;
  color: purple;
  border-bottom: 3px solid #cccccc;
  transition-duration: 0.3s;
}

