.register {
  width: 100vw;
  margin: 0px auto;
}
.register .nav {
  width: 100vw;
  height: 46px;
  padding: 10px;
  background-color: #fff;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.register .nav .nav-back {
  width: 15%;
  height: 100%;
}
.register .nav .nav-back .back {
  width: 30px;
  height: 30px;
  line-height: 4vh;
  text-align: center;
  border-radius: 50%;
  border: 1px solid #000;
  background-image: url(data:image/png;base64,);
  background-color: rgba(0, 0, 0, 0.5);
  background-size: 80%;
  background-repeat: no-repeat;
  background-position: 30% 30%;
}
.register .nav .nav-title {
  width: 70%;
  text-align: center;
}
.register .nav .nav-meta {
  width: 15%;
}
.register .uni-form-item {
  padding-top: 3vh;
  width: 84vw;
  height: 34vh;
  margin: 0 auto;
}
.register .uni-form-item .uni-input {
  width: 84vw;
  height: 6vh;
  line-height: 6.5vh;
  border-bottom: 1px solid #999;
  display: flex;
}
.register .uni-form-item .uni-input button {
  width: 28vw;
  height: 3vh;
  line-height: 3vh;
  padding: 0;
  font-size: 12px;
  background-color: #444444;
  margin-top: 2vh;
  color: white;
}
.register .uni-form-item .uni-input input {
  padding: 2vh;
}
.register .uni-form-item .uni-input ._span > ._img {
  width: 4.5vw;
  height: 2vh;
}
.register .verify {
  width: 84vw;
  height: 24vh;
  margin: 0 auto;
  font-size: 14px;
}
.register .verify ._span:nth-child(2) {
  margin-left: 13vw;
  color: red;
  font-size: 16px;
}
.register .verify ._span > ._img {
  width: 4.5vw;
  height: 2vh;
}
.register .verify .verify-img {
  margin-top: 2vh;
  width: 84vw;
  height: 10vh;
}
.register .verify .verify-img ._li {
  display: inline-block;
  width: 18.96vw;
  height: 9vh;
  margin-left: 2vw;
  border: 1px solid #999;
}
.register .verify .verify-img ._li:nth-child(1) {
  margin-left: 0;
}
.register .onregister {
  width: 84vw;
  margin: 0 auto;
  text-align: left;
}
.register .onregister button {
  padding: 12px;
  width: 82vw;
  background-color: #444444;
  color: white;
}
.register .onregister .disabled {
  padding: 12px;
  width: 80vw;
  background-color: #d9d9d9;
  color: white;
}
.register .onregister .agreement {
  display: flex;
  justify-content: space-around;
}
.register .onregister ._p {
  margin-top: 1vh;
  margin-bottom: 1vh;
  font-size: 12px;
}
.register .onregister ._span {
  font-size: 14px;
  color: red;
  padding-right: 3vw;
}

